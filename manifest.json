{
  "manifest_version": 3,
  "name": "Prompt Saver",
  "version": "1.0",
  "description": "Save, search, and organize AI prompts into categories with favorites. Perfect for ChatGPT, Claude, Gemini Perplexity and many more.",
  "permissions": [],
  "short_name": "Promply",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "hello.html",
    "default_icon": {
      "16": "images/Prompt.png",
      "32": "images/Prompt.png",
      "48": "images/Prompt.png",
      "128": "images/Prompt.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://www.perplexity.ai/*",
        "https://pi.ai/*",
        "https://character.ai/*",
        "https://copilot.microsoft.com/*",
        "https://www.meta.ai/*",
        "https://chat.mistral.ai/*",
        "https://dashboard.cohere.com/*",
        "https://playground.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
